        price: 6800,
        totalPrice: 6800,
        year: 1,
        outTradeNo: "1000121935913",
        paidPrice: 6800,
        payType: "OFFLINE",
        paymentType: "PAID",
        totalPrice: 6800,
        userCellphone: "2",
        userEntName: "1234e",
        userLegalPre: "fhffhhhvvbbb",
        username: "ggggfj",
        year: 1
      }
      this.detail = detail
      let title = '产品详情'
      if (this.type === '0') {
        title = '订单编号：' + this.detail.outTradeNo
      }
      wx.setNavigationBarTitle({
        title: title
      })
      this.detail.addTime = Utils.formatTime(this.detail.addTime)
      this.detail.endTime = Utils.formatTime(this.detail.endTime)
    }
    debugger
    this.$apply()
  }



  methods = {}

  // 下拉刷新
  async onPullDownRefresh () {
    this.get()
    wepy.stopPullDownRefresh()
  }
}
</script>

