  config = {
    navigationBarTitleText: '产品详情'
  }

  data = {
    id: '8a9e457e6348a2f801634959e98a0005',
    tip: '',
    type: '0',
    detail: {}
  }

  onLoad (e) {
    this.id = e.id
    this.type = e.active
    this.get()
  }

  async get () {
    const res = await api.costDetail({
      data: {
        orderId: this.id
      }
    })
    if (res.code === 0) {
      this.detail = res.data
      let title = '产品详情'
      if (this.type === '0') {
        title = '订单编号：' + this.detail.outTradeNo
        this.tip = '订单状态：' + this.tip
      } else {
        this.tip = '状态：' + this.tip
      }
      wx.setNavigationBarTitle({
        title: title
      })
    } else {
      Tips.error(res.msg)
      let detail = {
        addTime: 1525944019000,
        agentCellphone: null,
        agentEntName: null,
        agentId: "Admin_00000000000000000000000037",
        agentName: null,
        agentPrice: null,
        auditId: "Admin_00000000000000000000000037",
        comment: null,
        endTime: 1557342142653,
        layoutId: "625↵",
        name: "展示型网站,中文",
